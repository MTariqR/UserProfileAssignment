<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserProfileAssignment.MainPage">
    
    <StackLayout Margin="20">
        <Label HorizontalOptions="Center" Text="Profile"/>
        <Entry x:Name="NameEntry" Placeholder="First Name" Text="{Binding CurrentAccount.Name}"/>
        <Entry x:Name="SurnameEntry" Placeholder="Surname" Text="{Binding CurrentAccount.Surname}"/>
        <Entry x:Name="EmailEntry" Placeholder="Email" Text="{Binding CurrentAccount.Email}"/>
        <Entry x:Name="BioEntry" Placeholder="Bio" Text="{Binding CurrentAccount.Bio}"/>
        <Button Text="Save" HorizontalOptions="Center" Clicked="SaveChangesButton_Clicked"/>
        <Button Text="Edit" HorizontalOptions="Center" Clicked="EditBtnClick"/>
    </StackLayout>
    



</ContentPage>
