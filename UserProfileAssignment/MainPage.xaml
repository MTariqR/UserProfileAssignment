<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserProfileAssignment.MainPage">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Image Source="{Binding ProfileImage}" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" />
            <Entry x:Name="NameEntryBox" Placeholder="{Binding Name}" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />
            <Entry x:Name="EmailEntryBox"  Placeholder="{Binding Email}" FontSize="18" HorizontalOptions="Center" />
            <Button Text="Save Changes" Clicked="SaveChangesButton_Clicked" />
            <Label x:Name="TextBox" FontSize="18" HorizontalOptions="Center"/>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>
