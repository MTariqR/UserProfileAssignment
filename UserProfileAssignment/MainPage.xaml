<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserProfileAssignment.MainPage">
    
    <StackLayout Margin="20">
        <Label HorizontalOptions="Center" Text="Profile"/>
        <Label HorizontalOptions="Center" Text="{Binding FirstName}"/>
        <Label HorizontalOptions="Center" Text="{Binding Surname}"/>
        <Label HorizontalOptions="Center" Text="{Binding Email}"/>
        <Label HorizontalOptions="Center" Text="{Binding Bio}"/>
        <Entry x:Name="FirstNameEntry" Placeholder="First Name"/>
        <Entry x:Name="SurnameEntry" Placeholder="Surname"/>
        <Entry x:Name="EmailEntry" Placeholder="Email"/>
        <Entry x:Name="BioEntry" Placeholder="Bio"/>
    </StackLayout>
    



</ContentPage>
